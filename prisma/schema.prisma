// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id              Int             @id @default(autoincrement())
  name            String          @unique
  width           Int
  length          Int
  floors          String
  area            Float
  rooms           Int
  wallMaterialId  Int
  wallMaterial    WallMaterial    @relation(fields: [wallMaterialId], references: [id])
  completions     Completion[]

  images          ProjectImage[]  // Связанные изображения

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model ProjectImage {
  id        Int     @id @default(autoincrement())
  url       String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
}

model WallMaterial {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  projects Project[]
}

model Completion {
  id              Int                @id @default(autoincrement())
  completionType  String             // Базовая, Стандарт, Премиум
  price           Int                // Цена в рублях
  projectId       Int
  project         Project            @relation(fields: [projectId], references: [id])
  details         CompletionDetail[]
}

model CompletionDetail {
  id            Int         @id @default(autoincrement())
  name          String
  value         String?
  completionId  Int
  completion    Completion  @relation(fields: [completionId], references: [id])
}

model BuiltHouse {
  id          Int      @id @default(autoincrement())
  latitude    Float
  longitude   Float
  image       String   // Путь к изображению
  title       String
  description String
}
